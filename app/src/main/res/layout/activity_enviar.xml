<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/prueba"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.soke.faeca.EnviarA">

    <TextView
        android:id="@+id/portada"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ff146f03"
        android:paddingLeft="20dp"
        android:text="¿A quién deseas notificar?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffffff" />

    <ListView
        android:id="@+id/usuarios"
        android:layout_width="fill_parent"
        android:layout_height="320dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/usuariosTexto"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:choiceMode="singleChoice" />

    <TextView
        android:id="@+id/usuariosTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/portada"
        android:layout_marginTop="20dp"
        android:background="#ff146f03"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Usuarios"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffffff" />

    <ImageButton

        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usuarios"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@mipmap/enviar"
        android:onClick="enviar"
        android:src="@drawable/enviar_a_2" />

</RelativeLayout>
