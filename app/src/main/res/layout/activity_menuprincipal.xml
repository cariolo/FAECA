<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/prueba"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/mensajeCaja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:inputType="text"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/asunto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Asunto"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ff146f03" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/asunto"
        android:layout_alignStart="@+id/asunto"
        android:layout_below="@+id/spinnerTipoPush"
        android:text="Mensaje"
        android:background="#ff146f03"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

    <Spinner
        android:id="@+id/spinnerTipoPush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/asunto"
        android:layout_marginTop="20dp"
        android:entries="@array/asuntosEnviar"
        android:spinnerMode="dialog"
        android:textColor="@android:color/white" />

    <ImageButton
        android:id="@+id/enviarA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mensajeCaja"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@mipmap/enviar_a"
        android:onClick="enviarA"
        android:src="@drawable/button_enabled" />

    <ImageButton
        android:id="@+id/enviarTodos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enviarA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@mipmap/enviar_todos"
        android:onClick="enviarATodos"
        android:src="@drawable/enviar_todos" />

    <ImageButton
        android:id="@+id/enviarGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enviarTodos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@mipmap/enviar_grupo"
        android:onClick="enviarGrupo"
        android:src="@drawable/enviar_grupo" />

    <ImageButton
        android:id="@+id/consulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@mipmap/ver_notificaciones"
        android:onClick="consulta"
        android:src="@drawable/ver_notificaciones" />
</RelativeLayout>
